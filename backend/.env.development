# Backend Development Environment Configuration
# =============================================

# Application Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://postgres:dev_password@postgres:5432/ledgerly # pragma: allowlist secret

# Object Storage Configuration (MinIO)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin # pragma: allowlist secret
MINIO_SECRET_KEY=minioadmin # pragma: allowlist secret
