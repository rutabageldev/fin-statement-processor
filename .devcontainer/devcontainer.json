{
  "name": "fin-statement-processor-dev",
  "context": "..",
  "dockerFile": "../Dockerfile",
  "workspaceFolder": "/app",
  "runArgs": ["--env-file", ".env"],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "postCreateCommand": "pip install -r requirements.txt && git config --global user.name 'rutabageldev' && git config --global user.email 'rutabageldev@gmail.com'",
  "remoteUser": "root",
  "build": {
    "args": {
      "INSTALL_GIT": "true"
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
  ],
  "remoteEnv": {
    "GIT_SSH_COMMAND": "ssh -i /home/vscode/.ssh/id_ed25519"
  }
}
